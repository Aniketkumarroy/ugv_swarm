<?xml version="1.0"?>
<robot name="diff_drive_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertia.urdf.xacro"/>
    <xacro:include filename="diff_drive_bot.gazebo.xacro"/>

    <xacro:arg name="robot_name" default=""/>

    <xacro:macro name="diff_drive_bot" params="robot_name">
        <link name="base_link">
        </link>

        <joint name="chassis_joint" type="fixed">
            <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
            <parent link="base_link"/>
            <child link="chassis"/>
        </joint>

        <link name="chassis">
            <xacro:inertial_box mass="0.5" x="0.55" y="0.34" z="0.1">
                <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            </xacro:inertial_box>

            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <!-- <box size="0.55 0.34 0.1"/> -->
                    <cylinder radius="0.3" length="0.1"/>
                </geometry>
                <material name="">
                    <color rgba="1.0 0.0 0.0 1.0"/>
                </material>
            </visual>
            <collision>
               <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <box size="0.55 0.34 0.1"/>
                </geometry>
            </collision>
        </link>

        <joint name="left_wheel_joint" type="continuous">
            <origin xyz="0.0 0.2 0.0" rpy="-1.57 0.0 0.0"/>
            <parent link="chassis"/>
            <child link="left_wheel"/>
            <axis xyz="0.0 0.0 1.0"/>
        </joint>

        <link name="left_wheel">
            <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
                <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.1" length="0.05"/>
                </geometry>
                <material name="">
                    <color rgba="1.0 1.0 0.0 1.0"/>
                </material>
            </visual>
            <collision>
               <origin xyz="0.0 0.0 0.0" rpy="0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.1" length="0.05"/>
                </geometry>
            </collision>
        </link>

        <joint name="right_wheel_joint" type="continuous">
            <origin xyz="0.0 -0.2 0.0" rpy="1.57 0.0 0.0"/>
            <parent link="chassis"/>
            <child link="right_wheel"/>
            <axis xyz="0.0 0.0 -1.0"/>
        </joint>

        <link name="right_wheel">
            <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
                <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.1" length="0.05"/>
                </geometry>
                <material name="">
                    <color rgba="1.0 1.0 0.0 1.0"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.1" length="0.05"/>
                </geometry>
            </collision>
        </link>

        <joint name="front_castor_joint" type="fixed">
            <origin xyz="0.2 0.0 -0.05" rpy="0.0 0.0 0.0"/>
            <parent link="chassis"/>
            <child link="front_castor"/>
        </joint>

        <link name="front_castor">
            <xacro:inertial_sphere mass="0.1" radius="0.05">
                <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            </xacro:inertial_sphere>
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
                <material name="">
                    <color rgba="1.0 1.0 0.0 1.0"/>
                    <texture filename=""/>
                </material>
            </visual>
            <collision>
                 <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
            </collision>
        </link>

        <joint name="rear_castor_joint" type="fixed">
            <origin xyz="-0.2 0.0 -0.05" rpy="0.0 0.0 0.0"/>
            <parent link="chassis"/>
            <child link="rear_castor"/>
        </joint>

        <link name="rear_castor">
            <xacro:inertial_sphere mass="0.1" radius="0.05">
                <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            </xacro:inertial_sphere>
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
                <material name="">
                    <color rgba="1.0 1.0 0.0 1.0"/>
                    <texture filename=""/>
                </material>
            </visual>
            <collision>
                 <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
            </collision>
        </link>

        <joint name="lidar_joint" type="fixed">
            <origin xyz="0.0 0.0 0.11" rpy="0.0 0.0 0.0"/>
            <parent link="chassis"/>
            <child link="lidar_link"/>
        </joint>

        <link name="lidar_link">
            <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
                <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.05" length="0.05"/>
                </geometry>
                <material name="">
                    <color rgba="1.0 0.4 0.0 1.0"/>
                    <texture filename=""/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.05" length="0.05"/>
                </geometry>
            </collision>
        </link>

        <joint name="camera_joint" type="fixed">
            <origin xyz="0.28 0.0 0.065" rpy="0.0 0.0 0.0"/>
            <parent link="chassis"/>
            <child link="camera_link"/>
        </joint>

        <link name="camera_link">
            <xacro:inertial_box mass="0.05" x="0.01" y="0.07" z="0.03">
                <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            </xacro:inertial_box>
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <box size="0.01 0.07 0.03"/>
                </geometry>
                <material name="">
                    <color rgba="1.0 0.4 0.0 1.0"/>
                    <texture filename=""/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <box size="0.01 0.07 0.03"/>
                </geometry>
            </collision>
        </link>

        <xacro:diff_drive_bot_gazebo robot_name="$(arg robot_name)"/>

    </xacro:macro>

</robot>